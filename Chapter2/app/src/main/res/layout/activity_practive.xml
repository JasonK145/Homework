<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff5ee"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/abc"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_time"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-07-13  获得"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最水大學生"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:src="@mipmap/speaker"
            android:translationY="-30dp" />
        <TextView
            android:id="@+id/tv_word"
            android:layout_marginTop="0dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恭喜我喜提GPA5.0成為這門課"
            android:layout_gravity="center" />
        <TextView
            android:id="@+id/tv_word1"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="唯一一個滿績的人"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_word2"
            android:layout_marginTop="120dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功課準時交 從未缺勤 發言滿分"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/btn_word"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="笑死 根本沒有"
            android:textStyle="bold"
            android:background="@drawable/button_circle_shape"
            android:layout_gravity="center" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>